<p align="center">Here you can create new Articles</p>
<div align="center">
	<%= form_for :article, url: articles_path do |f| %>
	  <p>
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </p>
	 
	  <p>
	    <%= f.label :text %><br>
	    <%= f.text_area :text %>
	  </p>
	 
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
</div>
<%= link_to 'Back', articles_path %>