<div align="center">
  <h1>Listing articles <a href="<%= new_article_path %>">New Article</a></h1>
  
  <% @articles.each do |article| %>
      <i style="color: grey;width: 6%">Post No <%= article.id %> : </i>
      <div style="width: 800px">
        <h3>Title :<%= article.title %> </h3>
        <p><%= article.text %></p>
      </div>
      <hr width="500">
  <% end %>
</div>
